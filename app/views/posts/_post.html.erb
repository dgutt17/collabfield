<div class="col-sm-3 single-post-card" id=<%= post_path(post.id) %>>
  <div class="card">
    <div class="card-block">
      <h4 class="post-text">
        <%= truncate(post.title, :length => 60) %>
      </h4>
      <%= render post_format_partial_path, post: post%>
  </div><!-- card -->
</div><!-- col-sm-3 -->